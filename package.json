{
  "name": "hot-dash",
  "private": true,
  "scripts": {
    "build": "react-router build",
    "dev": "echo '\nâš ï¸  WARNING: npm run dev is DISABLED\n\nReason: shopify app dev overwrites production Shopify Partners config\n\nOptions:\n  npm run dev:vite     - Local dev (no Shopify CLI - SAFE)\n  npm run dev:shopify  - Full Shopify dev (OVERWRITES PRODUCTION)\n\nSee: docs/runbooks/SHOPIFY_DEV_VS_PROD_SEPARATION.md\n' && exit 1",
    "dev:vite": "vite --port 3000",
    "dev:shopify": "echo '\nðŸš¨ You are about to run shopify app dev\n\nThis will OVERWRITE the production Shopify Partners dashboard config.\n\nIf you understand the risk, run: npx shopify app dev\n' && exit 1",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "react-router-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate",
    "seed": "tsx prisma/seeds/dashboard-facts.seed.ts",
    "verify:db": "npx tsx --env-file=.env scripts/verify-prisma-connection.ts",
    "ops:backfill-chatwoot": "npx -y tsx scripts/ops/backfill-chatwoot-breach.ts",
    "ops:check-chatwoot-health": "node scripts/ops/check-chatwoot-health.mjs",
    "ops:nightly-metrics": "npx -y tsx scripts/ops/run-nightly-metrics.ts",
    "ops:purge-dashboard-data": "npx -y tsx scripts/ops/purge-dashboard-data.ts",
    "ops:ads-backfill": "npx -y tsx scripts/ops/backfill-ads-aggregations.ts",
    "ops:ads-anomaly-cron": "npx -y tsx scripts/ops/ads-anomaly-cron.ts",
    "ops:check-analytics-parity": "npx -y tsx scripts/ops/check-dashboard-analytics-parity.ts",
    "ai:build-index": "npx -y tsx scripts/ai/build-llama-index.ts",
    "ai:log-recommendation": "npx -y tsx scripts/ai/log-recommendation.ts",
    "ai:score": "npx -y tsx scripts/ai/score-text.ts",
    "dev-kb:ingest": "npx -y tsx scripts/dev-kb/ingest.ts",
    "dev-kb:query": "npx -y tsx scripts/dev-kb/query.ts",
    "dev-kb:query": "npx -y tsx scripts/dev-kb/query.ts",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite",
    "typecheck": "react-router typegen && tsc --noEmit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "test:lighthouse": "node scripts/ci/run-lighthouse.mjs",
    "test:ci": "npm run test:unit && npm run test:e2e && npm run test:a11y && npm run test:lighthouse",
    "ai:regression": "npx -y tsx scripts/ai/run-prompt-regression.ts",
    "playwright:admin": "PLAYWRIGHT_SHOPIFY_EMAIL=${PLAYWRIGHT_SHOPIFY_EMAIL} PLAYWRIGHT_SHOPIFY_PASSWORD=${PLAYWRIGHT_SHOPIFY_PASSWORD} npx playwright test tests/playwright/admin-embed.spec.ts",
    "ai:refresh": "npm --prefix scripts/ai/llama-workflow run build && npm --prefix scripts/ai/llama-workflow run refresh | tee packages/memory/logs/build/last_refresh.log",
    "ai:eval": "npm --prefix scripts/ai/llama-workflow run build && node scripts/ai/llama-workflow/dist/eval/run.js | tee packages/memory/logs/build/last_eval.log",
    "fmt": "npx prettier --write \"{app,packages,tests,scripts,docs}/**/*.{ts,tsx,js,jsx,json,md}\"",
    "scan": "./scripts/security/scan-secrets.sh",
    "ci": "npm run fmt && npm run lint && npm run test:ci && npm run scan",
    "test": "npm run test:ci"
  },
  "type": "module",
  "engines": {
    "node": ">=20.10"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
