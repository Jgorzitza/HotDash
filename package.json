{
  "name": "hot-dash",
  "private": true,
  "scripts": {
    "build": "react-router build",
    "dev": "shopify app dev",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "react-router-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate && prisma migrate deploy",
    "seed": "tsx prisma/seeds/dashboard-facts.seed.ts",
    "ops:backfill-chatwoot": "npx -y tsx scripts/ops/backfill-chatwoot-breach.ts",
    "ops:nightly-metrics": "npx -y tsx scripts/ops/run-nightly-metrics.ts",
    "ops:purge-dashboard-data": "npx -y tsx scripts/ops/purge-dashboard-data.ts",
    "ops:check-analytics-parity": "npx -y tsx scripts/ops/check-dashboard-analytics-parity.ts",
    "db:generate:postgres": "prisma generate --schema prisma/schema.postgres.prisma",
    "db:migrate:postgres": "prisma migrate deploy --schema prisma/schema.postgres.prisma",
    "db:push:postgres": "prisma db push --schema prisma/schema.postgres.prisma",
    "db:studio:postgres": "prisma studio --schema prisma/schema.postgres.prisma",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite",
    "typecheck": "react-router typegen && tsc --noEmit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:lighthouse": "node scripts/ci/run-lighthouse.mjs",
    "test:ci": "npm run test:unit && npm run test:e2e && npm run test:lighthouse",
    "ai:regression": "npx -y tsx scripts/ai/run-prompt-regression.ts"
  },
  "type": "module",
  "engines": {
    "node": ">=20.10"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@react-router/dev": "^7.9.1",
    "@react-router/fs-routes": "^7.9.1",
    "@react-router/node": "^7.9.1",
    "@react-router/serve": "^7.9.1",
    "@shopify/app-bridge-react": "^4.1.6",
    "@shopify/shopify-app-react-router": "^1.0.0",
    "@shopify/shopify-app-session-storage-prisma": "^7.0.0",
    "@supabase/supabase-js": "^2.48.0",
    "isbot": "^5.1.0",
    "prisma": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.9.1",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@shopify/api-codegen-preset": "^1.1.1",
    "@shopify/polaris-types": "^1.0.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "dotenv": "^16.4.5",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.2.0",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.3.0",
    "prettier": "^3.2.4",
    "typescript": "^5.2.2",
    "vite": "^6.2.2",
    "vitest": "^2.1.5"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0"
  },
  "overrides": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0"
  },
  "author": "justin"
}
