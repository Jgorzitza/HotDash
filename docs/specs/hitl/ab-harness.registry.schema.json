{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hotdash.local/schemas/ab-harness.registry.schema.json",
  "title": "A/B Experiment Registry",
  "type": "object",
  "properties": {
    "key": { "type": "string", "pattern": "^[a-z0-9_\-]+$" },
    "hypothesis": { "type": "string" },
    "metric": {
      "type": "string",
      "enum": ["cv_rate", "revenue", "ctr", "time_on_page"]
    },
    "min_effect": { "type": "number", "minimum": 0 },
    "arms": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "weight": { "type": "number", "minimum": 0 }
        },
        "required": ["name", "weight"]
      }
    },
    "guardrails": { "type": "array", "items": { "type": "string" } },
    "rollout_plan": { "type": "string" }
  },
  "required": ["key", "hypothesis", "metric", "arms"],
  "additionalProperties": false
}
